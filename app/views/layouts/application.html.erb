<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css' %>
  </head>

  <body>
      <% if flash[:notice] %>
        <div class="notification is-primary">  
        <%= notice %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="notification is-danger">  
        <%= alert %>
        </div>
      <% end %>
    <nav class="navbar is-info">
      <div class="navbar-menu">
        <% if session[:user_id].nil?%>
          <div class="navbar-end is-flex">
            <%= link_to  "Sign In", users_sign_in_path, class: 'is-primary button' %>
            <%= link_to  "Sign up", new_user_path, class: 'is-primary button m-l' %>
          </div>
        <% else %>
          <div class="navbar-start is-flex">
            Welcome: <%= User.find(session[:user_id]).username %>
            <%= link_to "All Events", events_path, class: 'is-primary button m-l' %>
            <%= link_to "My Events", my_events_path, class: 'is-primary button m-l' %>
            <%= link_to "Users", users_path, class: 'is-primary button m-l' %>
          </div>
          <div class="navbar-end is-flex">
            <%= link_to "Sign Out", users_sign_out_path, method: :delete, class: 'is-danger button' %>
          </div>
        <% end %>
      </div>
    </nav>
    
    <div class="my-content">
      <%= yield %>
    </div>
  </body>
</html>
