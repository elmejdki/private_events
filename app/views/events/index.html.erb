<h1>Previous Events:</h1>
<ul>
  <% @events.past.each do |event| %>
      <li>
      <%= event.title %>,
      <%= event.body %>,
      <%= event.date %>,
      <%= event.place %>
      <%= link_to "show", event_path(event) %>
      </li>
  <% end %>
</ul>
<h1>Upcoming Events:</h1>
<ul>
  <% @events.upcoming.each do |event| %>
      <li>
      <%= event.title %>,
      <%= event.body %>,
      <%= event.date %>,
      <%= event.place %>
      <%= link_to "show", event_path(event) %>
      </li>
  <% end %>
</ul>
<%= link_to  "Create an event", new_event_path %>