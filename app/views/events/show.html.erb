
<div class="columns is-centered">
  <div class="column is-half">
    <h1 class="title has-text-white has-text-centered has-background-info">Attendees List</h1>
    <div class="users-container-vertical">
      <% @attendees.each do |attendee| %>
        <div class="box">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong class="is-5"><%= attendee.username %></strong>
                </p>
              </div>
              <nav class="level is-mobile">
                <div class="level-left">
                  <%= link_to destroy_invite_path(attendee_id: attendee.id, event_id: params[:id]), method: :delete, class: 'level-item' do %>
                    <span class="icon is-small">
                      <i class="fas fa-trash has-text-danger" aria-hidden="true"></i>
                    </span>
                  <% end %>
                </div>
              </nav>
            </div>
          </article>
        </div>
      <% end %>
      <%= form_for @invite do |f| %>
        <div class="select">
          <%= f.collection_select(:attendee_id, @users, :id, :username) %>
        </div>
        <%= f.submit "invite user", class: 'button is-info' %>
      <% end %>
    
    
    </div>

  </div>
</div>

