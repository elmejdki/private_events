<div class="columns is-centered">
  <div class="column is-one-third">
    <div class="box user-card">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= @user.username %></strong>, <small><%= @user.email %></small>
              <br>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            </p>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <% if @user.id == session[:user_id] %>
                <%= link_to user_path, method: :delete,  class: 'level-item' do %>
                  <span class="icon is-small">
                    <i class="fas fa-trash has-text-danger" aria-hidden="true"></i>
                  </span>
                <% end %>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  </div>
</div>
<div class="columns">
  <div class="column is-three-fifths is-offset-one-fifth ">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <h1 class="">Created Events</h1>
            <div class="columns">
              <div class="column">
                    <h1 class="has-text-white has-background-info has-text-centered"> Previous Events:</h1>
                <div class="events-container">
                  
                  <% @created_events.filter{ |event| event.date < Time.now }.each do |event| %>
                      <div class="card">
                        <header class="card-header">
                          <p class="card-header-title has-text-centered is-block">
                          <%= event.title %>
                          </p>
                        </header>
                        <div class="card-content">
                          <div class="content">
                            <%= event.body %><br />
                            Location: <a href="#"><%= event.place %></a>
                            <br>
                            <time datetime="2016-01-01">Date: <%= event.date %></time>
                          </div>
                        </div>
                        <footer class="card-footer">
                          <%= link_to "Show", event_path(event), class:"card-footer-item" %>
                        </footer>
                      </div>
                  <% end %>
                
                </div>
              </div>
            
              <div class="column">
                <h1 class="has-text-white has-background-info has-text-centered">Upcoming Events:</h1>
                <div class="events-container">
                  <%  @created_events.filter{ |event| event.date >= Time.now }.each do |event| %>
                      <div class="card">
                        <header class="card-header">
                          <p class="card-header-title has-text-centered is-block">
                          <%= event.title %>
                          </p>
                        </header>
