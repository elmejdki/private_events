<h2>  ID: <%=@user.id %>  </h2>
<h2>  Username: <%=@user.username %></h2>
<h2>  Email: <%=@user.email %>  </h2>
<%= link_to  "Delete Account", user_path, method: :delete %>

<h1>  User Events: </h1>

<%= @events.each do |event| %>
  <%= event.date %>
  <%= event.title %>
  <%= event.body %>
  <%= event.place %>
<% end %>