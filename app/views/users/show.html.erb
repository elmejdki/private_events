                        </div>
                        <footer class="card-footer">
                          <%= link_to "Show", event_path(event), class:"card-footer-item" %>
                        </footer>
                      </div>
                  <% end %>
                </div>
            </div>
            </div>
          </div>
        </div>
      </article>
    </div>



    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
